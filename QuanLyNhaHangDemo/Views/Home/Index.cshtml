@model IEnumerable<ProductModel>
@{
	ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_SliderPartial" />
<div class="row">
    <div class="col-sm-3">
        @Html.Partial("_SidebarPartial")
    </div>
	<style>
		.product-image-wrapper {
			height: 450px;
		}
	</style>
	<div class="col-sm-9 padding-right">
		<div class="features_items">
			<!--features_items-->
			<h2 class="title text-center">Features Items</h2>
			@foreach(var item in Model)
			{
				<div class="col-sm-4">
				<div class="product-image-wrapper">
					<a>
                        <div class="single-products">
                            <div class="productinfo text-center">
									<a asp-action="Details" asp-controller="Product" asp-route-Id="@item.Id">
										<img src="~/media/products/@item.Image" alt="@item.Name" width="100%" />
										<h2>@item.Price</h2>
										<p>@item.Name</p>
										<p>Danh mục: @item.Category.Name</p>
										<p>Thương Hiệu: @item.Brand.Name</p>
									</a>
									@if (item.Quantity > 0)
									{
										if (!(User?.Identity?.IsAuthenticated ?? false))
										{
											<!-- CHƯA ĐĂNG NHẬP: bấm vào bắt đi login -->
											<button class="btn btn-default" onclick="location.href='@Url.Action("Login", "Account")'">
												<i class="fa fa-user"></i> Đăng nhập để mua
											</button>
										}
										else
										{
											<!-- ĐÃ ĐĂNG NHẬP: cho phép thêm giỏ hàng như cũ -->
											<button class="btn btn-default add-to-cart" data-product_id="@item.Id">
												<i class="fa fa-shopping-cart"></i> Thêm giỏ hàng
											</button>
										}
									}
									else
									{
										<button class="btn btn-default" disabled>
											<i class="fa fa-shopping-cart"></i> Hết hàng
										</button>
									}

									

							</div>
							
						</div>
                    </a>
				</div>
			</div>
			}
		</div><!--features_items-->
	</div>
</div>
@section Scripts {
	<script>
		$(document).ready(function () {
			$('.add-to-cart').click(function (e) {
				e.preventDefault(); // Ngăn điều hướng link <a> bao bên ngoài
				var Id = $(this).data("product_id");

				$.ajax({
					type: "POST",
					url: "@Url.Action("Add", "Cart")",
					data: { Id: Id },
					success: function (result) {
						if (result.success) {
							Swal.fire(result.message);
							$('#cart-total').text(result.totalItems);
						} else {
							Swal.fire("Lỗi", result.message, "error");
						}
					},
					error: function () {
						Swal.fire("Lỗi", "Không thể thêm sản phẩm", "error");
					}
				});
			});
		});
	</script>
}

