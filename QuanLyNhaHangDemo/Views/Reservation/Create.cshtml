@using QuanLyNhaHangDemo.Models
@model ReservationModel

@{
    ViewData["Title"] = "Đặt bàn";
    var table = ViewBag.Table as TableModel;
}

<h2>Đặt bàn - @table?.TableName</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="TableId" />

    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PeopleCount"></label>
        <input asp-for="PeopleCount" type="number" class="form-control" />
        <span asp-validation-for="PeopleCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReserveTime"></label>
        <input asp-for="ReserveTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="ReserveTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Note"></label>
        <textarea asp-for="Note" class="form-control"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Gửi yêu cầu đặt bàn</button>
    <a asp-controller="Table" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
