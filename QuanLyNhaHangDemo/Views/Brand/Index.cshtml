@model IEnumerable<ProductModel>
<div class="row">
    <div class="col-sm-3">
        @Html.Partial("_SidebarPartial")
    </div>
    <style>
        .product-image-wrapper {
            height: 450px;
        }
    </style>
    <div class="col-sm-9 padding-right">
        <partial name="_FilterProductsPartial" />
        <div class="features_items">
            <!--features_items-->
            <h2 class="title text-center">Features Items</h2>
            @foreach (var item in Model)
            {
                <div class="col-sm-4">
                    <div class="product-image-wrapper">
                        <a>
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <a asp-action="Details" asp-controller="Product" asp-route-Id="@item.Id">
                                        <img src="~/media/products/@item.Image" alt="@item.Name" width="100%" />
                                        <h2>@item.Price</h2>
                                        <p>@item.Name</p>
                                        <p>Danh mục: @item.Category.Name</p>
                                        <p>Thương Hiệu: @item.Brand.Name</p>
                                    </a>
                                    @if (item.Quantity > 0)
                                    {


                                        <button class="btn btn-default add-to-cart" data-product_id="@item.Id">
                                            <i class="fa fa-shopping-cart"></i> Thêm giỏ hàng
                                        </button>
                                    }
                                                                else
                                    {
                                        <button class="btn btn-default">
                                            <i class="fa fa-shopping-cart"></i>Het hang
                                        </button>
                                    }

                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div><!--features_items-->



    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://code.jquery.com/ui/1.14.1/jquery-ui.js"></script>

    <script>
        $(document).ready(function () {

            // ==== LẤY GIÁ TRỊ TỪ QUERY STRING (nếu có) ====
            var urlParams = new URLSearchParams(window.location.search);
            var startFromUrl = parseInt(urlParams.get("startprice"));
            var endFromUrl = parseInt(urlParams.get("endprice"));

            // nếu không có trên URL thì dùng default
            var minPrice = 0;
            var maxPrice = 500;
            var startValue = !isNaN(startFromUrl) ? startFromUrl : 75;
            var endValue   = !isNaN(endFromUrl)   ? endFromUrl   : 300;

            // ==== SLIDER GIÁ ====
            $("#slider-range").slider({
                range: true,
                step: 50,
                min: minPrice,
                max: maxPrice,
                values: [startValue, endValue],
                slide: function (event, ui) {
                    $("#amount").val("$" + ui.values[0] + " - $" + ui.values[1]);
                }
            });

            // Hiển thị khoảng giá hiện tại (theo URL hoặc default)
            $("#amount").val(
                "$" + $("#slider-range").slider("values", 0) +
                " - $" + $("#slider-range").slider("values", 1)
            );

            // Nút Lọc giá
            $(".btn-locgia").on("click", function () {
                var url = $(this).data("current_url");
                if (url) {
                    var s = $("#slider-range").slider("values", 0);
                    var e = $("#slider-range").slider("values", 1);
                    window.location = url + "?startprice=" + s + "&endprice=" + e;
                }
                return false;
            });

            // ==== GIỮ LẠI LỰA CHỌN SẮP XẾP ====
            // Giả sử value của <option> là URL (giống bạn đang dùng)
            var currentUrl = window.location.href;

            $("#sort_by option").each(function () {
                // nếu bạn dùng URL tương đối kiểu "?sort=xxx" thì nên so sánh bằng pathname+search
                // ở đây so sánh chứa cũng được, để không quá chặt
                if (currentUrl.indexOf($(this).val()) !== -1) {
                    $(this).prop("selected", true);
                }
            });

            $("#sort_by").on("change", function () {
                var url = $(this).val();
                if (url) {
                    window.location = url;
                }
                return false;
            });

            // ==== THÊM VÀO GIỎ HÀNG ====
            $(".add-to-cart").click(function (e) {
                e.preventDefault();
                var Id = $(this).data("product_id");

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Add", "Cart")",
                    data: { Id: Id },
                    success: function (result) {
                        if (result.success) {
                            Swal.fire(result.message);
                            $("#cart-total").text(result.totalItems);
                        } else {
                            Swal.fire("Lỗi", result.message, "error");
                        }
                    },
                    error: function () {
                        Swal.fire("Lỗi", "Không thể thêm sản phẩm", "error");
                    }
                });
            });
        });
    </script>
}



