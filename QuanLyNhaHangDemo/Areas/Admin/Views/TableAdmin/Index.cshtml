@model IEnumerable<TableModel>

<h2>Danh sách bàn</h2>

<a class="btn btn-primary" asp-action="Create" asp-controller="TableAdmin">Add Table</a>
<br />
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên bàn</th>
            <th>Trạng thái</th>
            <th>OrderCode</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.TableName</td>
                <td>@t.Status</td>
                <td>@t.CurrentOrderCode</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="TableAdmin" asp-route-Id="@t.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="TableAdmin" asp-route-Id="@t.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
