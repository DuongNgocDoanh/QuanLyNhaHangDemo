@model QuanLyNhaHangDemo.Models.ShippingModel
@{
    ViewData["title"] = "Create Shipping";
}
<style type="text/css">
    .css_select_div{ text-align: center;}
    .css_select{ display: inline-table; width: 25%; padding: 5px; margin: 5px 2%; border: solid 1px #686868; border-radius: 5px;}
</style>
<h4>Create Shipping</h4>
<div class="col-md-9">
        @Html.AntiForgeryToken() 
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Chọn</label>
            <select class="css_select" id="tinh" name="tinh" title="Chọn Tỉnh Thành">
                <option value="0">Tỉnh Thành</option>
            </select>
        </div>

        <div class="form-group">
            <label>Chọn</label>
            <select class="css_select" id="quan" name="quan" title="Chọn Phường Xã">
                <option value="0">Phường Xã</option>
            </select>
        </div>
        <div>
            <label>Phí Vận Chuyển</label>
            <input asp-for="Price" id="price-shipping" class="form-control"/>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-primary btn-add-shipping">Create</button>
        </div>
    
    <a asp-action="Index" asp-controller="Shipping">Back to List Shipping</a>
    <h2>Shipping List</h2>
    <table class="table table-striped" id="myTable">
        <thead>
            <tr>
                <th>Tỉnh Thành</th>
                <th>Phường Xã</th>
                <th>Phí Vận Chuyển</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ShippingList)
            {
                <tr>
                    <td>@item.City</td>
                    <td>@item.District</td>
                    <td>@item.Price.ToString("N0") VNĐ</td>
                    <td>
                        <a href="@Url.Action("Delete", "Shipping", new { id = item.Id })" class="btn btn-danger btn-sm confirmDeletion">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(".btn-add-shipping").click(function () {
            var tinh = $("#tinh").find('option:selected').text();
            var quan = $("#quan").find('option:selected').text();
            var price = $("#price-shipping").val();

            if (tinh == '' || quan == '' || price == '') {
                Swal.fire("Vui lòng nhập đầy đủ thông tin.");
            } else {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("StoreShipping", "Shipping")',
                    data: { tinh: tinh, quan: quan, price: price },
                    success: function (result) {
                        if (result.success) {
                            Swal.fire("Thêm phí vận chuyển thành công.");
                        } else if (result.duplicate) {
                            Swal.fire("Thêm phí vận chuyển thất bại (trùng dữ liệu).");
                        }
                    },
                    error: function () {
                        Swal.fire("Lỗi server!");
                    }
                });
            }
        });
    </script>


    <script>
        $(document).ready(function() {
            //Lấy tỉnh thành
            $.getJSON('https://esgoo.net/api-tinhthanh-new/1/0.htm',function(data_tinh){
                if(data_tinh.error==0){
                   $.each(data_tinh.data, function (key_tinh,val_tinh) {
                      $("#tinh").append('<option value="'+val_tinh.id+'">'+val_tinh.full_name+'</option>');
                   });
                   $("#tinh").change(function(e){
                        var idtinh=$(this).val();
                        //Lấy phường xã
                        $.getJSON('https://esgoo.net/api-tinhthanh-new/2/'+idtinh+'.htm',function(data_quan){
                            if(data_quan.error==0){
                               $("#quan").html('<option value="0">Phường Xã</option>');
                               $.each(data_quan.data, function (key_quan,val_quan) {
                                  $("#quan").append('<option value="'+val_quan.id+'">'+val_quan.full_name+'</option>');
                               });
                            }
                        });
                   });

                }
            });
         });
    </script>
   
}
