@model MaterialModel
@{
    ViewData["Title"] = "Thêm nguyên liệu";
}

<h3>Thêm nguyên liệu</h3>

<form asp-action="CreateMaterial" method="post">
    <div class="form-group">
        <label>Tên nguyên liệu</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Đơn vị (kg, g, chai,...)</label>
        <input asp-for="Unit" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ngưỡng cảnh báo</label>
        <input asp-for="ReorderLevel" type="number" step="0.1" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
