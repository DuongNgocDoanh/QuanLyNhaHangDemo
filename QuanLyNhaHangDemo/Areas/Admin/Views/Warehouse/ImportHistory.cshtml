@model IEnumerable<QuanLyNhaHangDemo.Models.InventoryTransactionModel>

<h2>Lịch sử nhập kho (Toàn bộ kho)</h2>

<form method="get">
    <div>
        <label>Chọn khoảng thời gian:</label>
        Từ: <input type="date" name="from" value="@ViewBag.From?.ToString("yyyy-MM-dd")" />
        Đến: <input type="date" name="to" value="@ViewBag.To?.ToString("yyyy-MM-dd")" />
        <button type="submit">Lọc</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Nguyên liệu</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Tổng giá trị</th>
            <th>Ngày nhập</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Material.Name</td>  <!-- Tên nguyên liệu -->
                <td>@item.Quantity</td>       <!-- Số lượng nhập -->
                <td>@item.UnitPrice</td>      <!-- Đơn giá nhập -->
                <td>@item.TotalPrice</td>     <!-- Tổng chi phí (Số lượng * Đơn giá) -->
                <td>@item.DateCreated.ToString("yyyy-MM-dd")</td>  <!-- Ngày nhập kho -->
            </tr>
        }
    </tbody>
</table>

<h4>Tổng chi phí nhập kho: @ViewBag.TotalImportCost.ToString("N0")</h4>  <!-- Hiển thị tổng chi phí nhập kho -->
