@model InventoryTransactionModel
@{
    var material = ViewBag.Material as MaterialModel;
}

<h3>Nhập kho: @material.Name</h3>

<form asp-action="Import" method="post">

    <input type="hidden" asp-for="MaterialId" />

    <div class="form-group">
        <label>Số lượng nhập</label>
        <input asp-for="Quantity" type="number" step="0.1" class="form-control" />
    </div>

    <div class="form-group">
        <label>Đơn giá</label>
        <input asp-for="UnitPrice" type="number" step="0.1" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ghi chú</label>
        <input asp-for="Note" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Nhập kho</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>

</form>
