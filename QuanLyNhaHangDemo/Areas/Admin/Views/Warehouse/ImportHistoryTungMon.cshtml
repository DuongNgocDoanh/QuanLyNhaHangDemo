@model IEnumerable<QuanLyNhaHangDemo.Models.InventoryTransactionModel>
@{
    var material = (QuanLyNhaHangDemo.Models.MaterialModel)ViewBag.Material;
    ViewData["Title"] = "Lịch sử nhập " + material.Name;
}

<h3>Lịch sử nhập: @material.Name (@material.Unit)</h3>

<div class="mb-3">
    <strong>Tổng số lượng đã nhập:</strong> @ViewBag.TotalImportQuantity @material.Unit
    <br />
    <strong>Tổng tiền đã nhập:</strong> @ViewBag.TotalImportCost.ToString("N0") đ
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ngày</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
            <th>Ghi chú</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.DateCreated.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@t.Quantity</td>
                <td>@t.UnitPrice.ToString("N0")</td>
                <td>@t.TotalPrice.ToString("N0")</td>
                <td>@t.Note</td>
            </tr>
        }
    </tbody>
</table>
