@model MaterialModel
@{
    ViewData["Title"] = "Sửa nguyên liệu";
}

<h3>Sửa nguyên liệu</h3>

<form asp-action="EditMaterial" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Tên</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Đơn vị</label>
        <input asp-for="Unit" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ngưỡng cảnh báo</label>
        <input asp-for="ReorderLevel" class="form-control" />
    </div>

    <div class="form-group">
        <label>Trạng thái</label>
        <select asp-for="Status" class="form-control">
            <option value="1">Đang dùng</option>
            <option value="0">Ngừng dùng</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
</form>
