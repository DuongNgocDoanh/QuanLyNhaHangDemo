@model IEnumerable<OrderDetails>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["title"] = "Order Details";
    decimal total = 0;
    decimal subtotal = 0;
}

<h3>Order Details</h3>
<a href="/Admin/Order/Invoice?ordercode=@Model.First().OrderCode"
   class="btn btn-primary" target="_blank">
    In hóa đơn
</a>

<div class="table table-responsive">
    <table class="table" id="detail_order">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order Code</th>
                <th>UserName</th>
                <th>Product Name</th>
                <th>Product Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                subtotal = item.Quantity * item.Price;
                total += subtotal;
                <tr>
                    <td>
                        <input type="hidden" value="@item.OrderCode" class="getId" />
                        @item.Id
                    </td>
                    <td>@item.OrderCode</td>
                    <td>@item.UserName</td>
                    <td>@item.Product.Name</td>
                    <td>@item.Price.ToString("#,##0 VNĐ")</td>
                    <td>@item.Quantity</td>
                    <td>@subtotal.ToString("#,##0 VNĐ")</td>
                    <td>
                        @if (item.Status == 0)
                        {
                            <span class="text text-success">Đang Chuẩn Bị</span>
                        }
                        else if (item.Status == 1)
                        {
                            <span class="text text-warning">Đang chế biến</span>
                        }
                        else if (item.Status == 2)
                        {
                            <span class="text text-primary">Hoàn Thành</span>
                        }
                        else if (item.Status == 3)
                        {
                            <span class="text text-danger">Đã Hủy</span>
                        }
                    </td>
                </tr>
            }

            <tr>
                <td><strong>Total:</strong></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><strong>Tổng:</strong> @total.ToString("#,##0 đ")</td>
                <td><strong>Shipping Cost:</strong> @ViewBag.ShippingCost</td>
                <td>
                    <select class="form-control select-update-order"
                            asp-items="@(ViewBag.StatusList as List<SelectListItem>)">
                    </select>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        new DataTable('#detail_order', {
            layout: {
                topStart: {
                    buttons: [
                        {
                            extend: 'pdf',
                            exportOptions: { columns: [0, 1, 2, 3, 4, 5, 6] }
                        },
                        {
                            extend: 'print',
                            exportOptions: { columns: [0, 1, 2, 3, 4, 5, 6] }
                        }
                    ]
                }
            }
        });
    </script>

    <script>
        $(document).ready(function () {
            $('.select-update-order').change(function () {
                var status = $(this).val();

                // LẤY ĐÚNG ordercode của DÒNG hiện tại
                var ordercode = $(this).closest('tr').closest('tbody')
                    .find('.getId').first().val(); 
                // nếu muốn chắc chắn lấy từ dòng trên, có thể đổi cách tổ chức HTML cho dễ.

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateOrder", "Order", new { area = "Admin" })",
                    data: { status: status, ordercode: ordercode },
                    success: function (result) {
                        if (result.success) {
                            Swal.fire("Cập nhật đơn hàng thành công.").then(() => {
                                window.location.href = '@Url.Action("Index", "Order", new { area = "Admin" })';
                            });
                        } else {
                            Swal.fire("Cập nhật đơn hàng thất bại: " + (result.message || ""));
                        }
                    },
                    error: function () {
                        Swal.fire("Có lỗi khi gọi server.");
                    }
                });
            });
        });
    </script>
}
