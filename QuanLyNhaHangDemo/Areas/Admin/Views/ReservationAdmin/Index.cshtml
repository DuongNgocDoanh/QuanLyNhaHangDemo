@using QuanLyNhaHangDemo.Models
@model IEnumerable<ReservationModel>

@{
    ViewData["Title"] = "Duyệt đặt bàn";
}

<h2>Duyệt đặt bàn</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Bàn</th>
            <th>Khách</th>
            <th>SĐT</th>
            <th>Số người</th>
            <th>Thời gian đến</th>
            <th>Trạng thái</th>
            <th>Ghi chú</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Table?.TableName (@r.TableId)</td>
                <td>@r.CustomerName</td>
                <td>@r.Phone</td>
                <td>@r.PeopleCount</td>
                <td>@r.ReserveTime.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@r.Status</td>
                <td>@r.Note</td>
                <td>
                    @if (r.Status == ReservationStatus.Pending)
                    {
                        <form asp-action="Approve" asp-route-id="@r.Id" method="post" style="display:inline">
                            <button type="submit" class="btn btn-success btn-sm">Duyệt</button>
                        </form>
                        <form asp-action="Reject" asp-route-id="@r.Id" method="post" style="display:inline">
                            <button type="submit" class="btn btn-danger btn-sm">Từ chối</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
