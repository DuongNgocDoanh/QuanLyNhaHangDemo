@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";
}
<h3>List Products</h3>
<a asp-area="Admin" asp-action="Create" asp-controller="Product">Add Product</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Quantity</th>
            <th scope="col">Product Sold</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Product Category</th>
            <th scope="col">Product Brand</th>
            <th scope="col">Product Manage</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td><b>@item.Quantity</b><br /><a asp-action="AddQuantity" asp-route-Id="@item.Id">Add Quantity</a></td>
                <td><b>@item.Sold</b></td>
                <td>@Html.Raw(item.Description)</td>
                <td>@item.Price</td>
                <td><img src="~/media/products/@item.Image" width="120"></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Product" asp-route-Id="@item.Id">Delete</a>
                    <a asp-area="Admin"
                       asp-controller="ProductMaterial"
                       asp-action="Index"
                       asp-route-productId="@item.Id"
                       class="btn btn-sm btn-info">
                        Định mức nguyên liệu
                    </a>

                </td>
           </tr> 
        }
        
        
    </tbody>
</table>
