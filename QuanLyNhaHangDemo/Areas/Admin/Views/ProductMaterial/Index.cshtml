@model IEnumerable<ProductMaterialModel>

@{
    var product = ViewBag.Product as ProductModel;
}

<h3>Định mức nguyên liệu cho món: @product.Name</h3>

<a asp-action="Create" asp-route-productId="@product.Id" class="btn btn-primary mb-3">+ Thêm định mức</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nguyên liệu</th>
            <th>Số lượng / 1 phần</th>
            <th>Ghi chú</th>
            <th width="150px">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Material.Name</td>
                <td>@r.QuantityPerProduct @r.Material.Unit</td>
                <td>@r.Note</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-info">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@r.Id" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary">Quay lại danh sách món</a>
