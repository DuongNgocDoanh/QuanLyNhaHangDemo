@model ProductMaterialModel
@{
    var product = ViewBag.Product as ProductModel;
}

<h3>Thêm định mức cho món: @product.Name</h3>

<form asp-action="Create" method="post">

    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label>Nguyên liệu</label>
        <select asp-for="MaterialId" asp-items="ViewBag.Materials" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Số lượng / 1 phần</label>
        <input asp-for="QuantityPerProduct" type="number" step="0.1" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ghi chú</label>
        <textarea asp-for="Note" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" asp-route-productId="@product.Id" class="btn btn-secondary">Hủy</a>

</form>
